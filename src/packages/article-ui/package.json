{
  "name": "@ai-newspaper/article-ui",
  "version": "1.0.0",
  "type": "module",
  "main": "./dist/ArticleUI.js",
  "module": "./dist/ArticleUI.js",
  "types": "./dist/ArticleUI.d.ts",
  "exports": {
    ".": {
      "import": "./dist/ArticleUI.js",
      "types": "./dist/ArticleUI.d.ts"
    },
    "./standalone": {
      "import": "./dist/standalone/article-ui.standalone.js",
      "types": "./dist/article-ui.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && vite build",
    "build:standalone": "tsc && STANDALONE=true vite build",
    "build:standalone:full": "node build-standalone.js",
    "dev": "vite build --watch",
    "clean": "rm -rf dist node_modules"
  },
  "peerDependencies": {
    "lit": "^3.3.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.1",
    "typescript": "^5.4.0",
    "vite": "^7.1.12"
  }
}
