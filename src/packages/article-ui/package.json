{
  "name": "@ai-newspaper/article-ui",
  "version": "1.0.0",
  "type": "module",
  "main": "./dist/article-ui.js",
  "module": "./dist/article-ui.js",
  "types": "./dist/article-ui.d.ts",
  "exports": {
    ".": {
      "import": "./dist/article-ui.js",
      "types": "./dist/article-ui.d.ts"
    },
    "./react": {
      "import": "./dist/ArticleUI.js",
      "types": "./dist/ArticleUI.d.ts"
    },
    "./standalone": {
      "import": "./dist/standalone/article-ui.standalone.js",
      "types": "./dist/article-ui.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run build:webcomponent && npm run build:react",
    "build:webcomponent": "tsc && vite build",
    "build:react": "REACT=true vite build",
    "build:standalone": "tsc && STANDALONE=true vite build",
    "build:all": "npm run build && npm run build:standalone",
    "prepublishOnly": "npm run build:all",
    "dev": "vite build --watch",
    "clean": "rm -rf dist node_modules"
  },
  "dependencies": {
    "@lit/react": "^1.0.2",
    "lit": "^3.3.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.1",
    "typescript": "^5.4.0",
    "vite": "^7.1.12"
  }
}
