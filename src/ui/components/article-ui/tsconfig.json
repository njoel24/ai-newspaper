{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2021", "DOM"],
    "jsx": "react-jsx",
    "jsxImportSource": "@stencil/core",
    "types": ["@stencil/core"],
    "skipLibCheck": true,
    "strict": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": false
  },
  "include": ["**/*.tsx", "**/*.ts"]
}
