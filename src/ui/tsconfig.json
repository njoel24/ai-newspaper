{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "lib": ["ES2021", "DOM"],
    "types": ["vite/client"],
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "strict": false,
    "skipLibCheck": true
  },
  "include": ["**/*.ts", "**/*.tsx", "custom-elements.d.ts"]
}
