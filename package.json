{
  "name": "ai-newspaper",
  "version": "1.0.0",
  "type": "module",
  "main": "src/main.ts",
  "scripts": {
    "dev": "vite",
    "dev:server": "ts-node-esm src/server.ts",
    "dev:full": "concurrently \"npm run dev:server\" \"npm run dev\"",
    "start": "npm run build && node dist/server.js",
    "test": "vitest --run",
    "test:watch": "vitest --watch",
    "format": "prettier --write \"src/**/*.{ts,json,md,css,html}\" \"*.md\"",
    "format:check": "prettier --check \"src/**/*.{ts,json,md,css,html}\" \"*.md\"",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "build": "tsc && npm run build:article-ui && npm run build:ui",
    "build:article-ui": "cd src/packages/article-ui && npm run build",
    "build:ui": "vite build",
    "clean": "rm -rf node_modules dist"
  },
  "dependencies": {
    "@lit/react": "^1.0.2",
    "@prisma/client": "^6.0.0",
    "dotenv": "^17.2.3",
    "langchain": "^1.0.4",
    "lit": "^3.3.1",
    "openai": "^6.7.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@originjs/vite-plugin-federation": "^1.4.1",
    "@types/express": "^4.17.17",
    "@types/node": "^20.19.24",
    "@types/uuid": "^9.0.2",
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^9.2.1",
    "express": "^5.1.0",
    "jsdom": "^27.1.0",
    "prettier": "^3.6.2",
    "prisma": "^6.0.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.0",
    "vite": "^7.1.12",
    "vitest": "^4.0.6",
    "workbox-build": "^4.3.1"
  },
  "vitest": {
    "environment": "node"
  }
}
