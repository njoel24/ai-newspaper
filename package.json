{
  "name": "ai-newspaper",
  "version": "1.0.0",
  "type": "module",
  "main": "src/main.ts",
  "scripts": {
    "dev": "vite",
    "dev:server": "ts-node-esm src/server.ts",
    "dev:full": "concurrently \"npm run dev:server\" \"npm run dev\"",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "format": "prettier --write \"src/**/*.{js,ts,json,md,css,html}\" \"*.md\"",
    "format:check": "prettier --check \"src/**/*.{js,ts,json,md,css,html}\" \"*.md\"",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "build": "tsc"
  },
  "dependencies": {
    "@prisma/client": "^6.0.0",
    "dotenv": "^17.2.3",
    "openai": "^6.7.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "vitest": "^4.0.6",
    "typescript": "^5.4.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "@types/node": "^20.4.0",
    "@types/express": "^4.17.17",
    "@types/uuid": "^9.0.2",
    "express": "^5.1.0",
    "jsdom": "^27.1.0",
    "prettier": "^3.6.2",
    "prisma": "^6.0.0",
    "vite": "^7.1.12"
  },
  "vitest": {
    "environment": "node"
  }
}
